<% if logged_in? %>  
  <p class="pull-right">
    [<%= link_to 'edit this post', edit_post_path(@post) %>]
  </p>
<% end %>

<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: (link_to @post.title, fix_url(@post.url)) %>

<p>
<%= @post.description %>
</p>
<hr/>

<h5>Comments:</h5>



<%= render 'shared/error', obj: @comment %>

<% if logged_in? %>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.label :body, 'Leave a comment' %>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br />
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
  <% end %>
<% end %>

  <% @post.comments.each do |comment| %>
    <div class="row">
      <div class="well span8">
        <em><%= comment.body %></em>
        <br>
        <span class="quiet">by</span>
        <a href=""><%= comment.creator.username %></a>
        <small>at <%= format_date(comment.created_at) %></small>
      </div>
    </div>
  <% end %>

